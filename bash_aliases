## Shortcuts
alias E='cd ~/Desktop'
alias D='cd ~/Downloads'
alias dotfiles='cd ~/dotfiles'
alias dev='cd ~/dev'

## Colorize grep and ls output
alias grep='grep --color=auto'
alias ls='ls -p --color'

## tmux in 256 colors
alias tmux='tmux -2'

## rm safety net
alias rm='rm -I'

## rmf => rm -rf
alias rmf='rm -rfI'

## je
alias :q='exit'
alias :Q='exit'
alias EXIT='exit'

## vi -> vim
alias vi='vim'

# reload configs
alias reload_tmux='tmux source-file ~/.tmux.conf'
alias reload_bash='source ~/.bashrc'
