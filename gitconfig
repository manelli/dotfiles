[core]
    editor = vim
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.gitignore
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto
[commit]
    template = ~/.gitmessage
[url "git@github.com:"]
    insteadOf = "gh:"
[url "git@gitlab.com:"]
    insteadOf = "gl:"
[alias]
    st = status -su
    ci = commit
    co = checkout
    br = branch
    df = diff
    dff = diff --color-words=.
    fc = fetch
    rb = rebase
    aa = add -A
    lg = log --graph --pretty=format:'%Cred%h%Creset |%C(blue) %an%Creset |%C(green) %ad %n %C(yellow) %m %s%n'
    lf = log -p -M --follow
    bl = blame
    clean-remote = "!f() { git remote prune "${1:-origin}"; }; f "$@""
    alias = "!f() { git config --get-regexp alias.*; }; f"
[push]
  default = current
[fetch]
    prune = true
[user]
  useConfigOnly = true
