[user]
    name = Martin Manelli
    email = manelli.ml@gmail.com
[core]
    editor = vim
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.gitignore
[web]
    browser = google-chrome
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto
[github]
    user = manelli
[gitlab]
    user = manelli
[commit]
    template = ~/.gitmessage
[url "git@github.com:"]
    insteadOf = "gh:"
[url "git@gitlab.com:"]
    insteadOf = "gl:"
[alias]
    st = status -s
    ci = commit
    co = checkout
    br = branch
    df = diff
    fc = fetch
    rb = rebase
    aa = add -A
    lg = log --graph --pretty=format:'%Cred%h%Creset |%C(blue) %an%Creset |%C(green) %ad %n %C(yellow) %m %s%n'
    lf = log -p -M --follow
    bl = blame
    clean-remote = "!f() { git remote prune "${1:-origin}"; }; f "$@""
    alias = "!f() { git config --get-regexp alias.*; }; f"
[push]
    default = simple
